.modal{
    display: none;
    position: fixed;
    z-index: 2;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background: rgba(0, 0, 0, .5);
}

.modal-content{
    z-index: 1;
    position: relative;
    background: white;
    margin: 10px auto;
    border: 1px solid green;
    border-radius: 5px;
    width: 40%;
    padding-bottom: 20px;
}

.close{
    position: absolute;
    right: 5px;
    top: 5px;
    color: black;
    font-size: 20px;
    font-weight: bold;
}

.close:hover, .close:focus{
    color: purple;
    font-size: 25px;
    cursor: pointer;
}

/* Add Zoom Animation */
.animate {
    -webkit-animation: animatezoom 0.6s;
    animation: animatezoom 0.6s
}

@-webkit-keyframes animatezoom {
    from {-webkit-transform: scale(0)}
    to {-webkit-transform: scale(1)}
}

@keyframes animatezoom {
    from {transform: scale(0)}
    to {transform: scale(1)}
}


